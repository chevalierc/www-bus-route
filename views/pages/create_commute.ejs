<html>

<head>
    <% include ../partials/head %>
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAoOnmeOfTKrMCM9fwH15jBJ1jnMaR49YI&callback=initMap"></script>
        <script src="js/create_commute.js"></script>
</head>

<body>
    <!-- navigation bar -->
    <div class="container">
        <% include ../partials/menu %>
    </div>

    <!-- Create Commute Form -->

    <div class="container">
        <h2>
            Create Commute
        </h2>
        <div class="well">
            <div class="form">
                <div class="form-group">
                    <input type="text" class="form-control create-commute-text" id="startAddress" placeholder="Start Address">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control create-commute-text" id="endAddress" placeholder="End Address">
                </div>
                <div class="form-group form-horizontal create-commute-text">
                    <label class="form-check-label"><input type="radio" name="time_type" value="1" checked="checked">Arrive By:</label>
                    <label class="form-check-label"><input type="radio" name="time_type" value="0">Leave At:</label>
                    <input class="form-control create-commute-text" type="time" value="08:00:00" id="time">
                </div>
                <!-- Days checkboxs start -->
                <div class="create-commute-text form-group">
                    <div class="form-check form-check-inline">
                        <label>
                            Days of the Week:
                        </label>
                        <span class="dow dow-inactive" id="sun">SUN</span>
                        <span class="dow dow-active" id="mon">MON</span>
                        <span class="dow dow-active" id="tue">TUE</span>
                        <span class="dow dow-active" id="wed">WED</span>
                        <span class="dow dow-active" id="thu">THU</span>
                        <span class="dow dow-active" id="fri">FRI</span>
                        <span class="dow dow-inactive" id="sat">SAT</span>
                    </div>
                </div>
            </div>
            <div style="width:100%; height:300px;" id="Amap"></div>

            <button id="submit" type="button pull-right" class="btn btn-primary btn-block create-commute-submit">Submit</button>
            <div id="error" class="error"></div>

        </div>
    </div>

    <% include ../partials/footer %>

</body>

</html>
